<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Nexus ERP</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome for Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Space+Grotesk:wght@500;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Poppins", sans-serif;
      }
      .font-title {
        font-family: "Space+Grotesk", sans-serif;
      }
    </style>
  </head>
  <body
    class="bg-gradient-to-br from-black via-gray-900 to-green-950 flex items-center justify-center min-h-screen p-4"
  >
    <div
      class="w-full max-w-md rounded-xl bg-gradient-to-r from-green-500 via-green-800 to-black p-1 shadow-2xl shadow-green-500/20"
    >
      <div class="bg-gray-900 backdrop-blur-xl p-8 rounded-lg">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold text-green-400 font-title">
            Welcome Back
          </h2>
          <p class="text-gray-400 mt-2">Please sign in to continue</p>
        </div>

        <form method="POST" action="/api/v1/auth/login" class="space-y-6">
          <!-- Email Input -->
          <div>
            <label
              for="email"
              class="block mb-2 text-sm font-medium text-gray-300"
              >Email</label
            >
            <input
              type="email"
              name="email"
              id="email"
              required
              class="w-full px-4 py-2 text-gray-200 placeholder:text-gray-500 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-green-500 focus:ring-2 focus:ring-green-500/50 transition duration-300"
              placeholder="you@example.com"
            />
          </div>

          <!-- Password Input -->
          <div>
            <div class="flex justify-between items-center mb-2">
              <label for="password" class="text-sm font-medium text-gray-300"
                >Password</label
              >
              <a href="#" class="text-sm text-green-400 hover:underline"
                >Forgot password?</a
              >
            </div>
            <input
              type="password"
              name="password"
              id="password"
              required
              class="w-full px-4 py-2 text-gray-200 placeholder:text-gray-500 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-green-500 focus:ring-2 focus:ring-green-500/50 transition duration-300"
              placeholder="••••••••"
            />
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full bg-gradient-to-r from-green-600 to-green-800 text-white font-bold py-3 px-4 rounded-lg hover:from-green-700 hover:to-green-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-green-500 transition-all duration-300 ease-in-out transform hover:-translate-y-1"
          >
            Sign In
          </button>

          <!-- Signup Link -->
          <p class="text-sm text-center text-gray-400">
            Don't have an account?
            <a
              href="/register"
              class="font-medium text-green-400 hover:underline"
              >Register here</a
            >
          </p>
        </form>
      </div>
    </div>
  </body>
</html>
